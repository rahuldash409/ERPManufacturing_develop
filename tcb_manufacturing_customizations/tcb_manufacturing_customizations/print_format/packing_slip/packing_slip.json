 "html": "<div class=\"print-format-container\">\n\n    <style>\n        .print-format-container {\n            font-family: Arial, sans-serif;\n            font-size: 11pt;\n            color: #000;\n            line-height: 1.3;\n        }\n\n        .single-label-container {\n            border: 1px solid #ccc;\n            padding: 20px;\n            margin-bottom: 40px;\n            page-break-inside: avoid;\n            background-color: #fff;\n        }\n\n        .header-section { margin-bottom: 15px; }\n        .company-name { font-size: 18pt; font-weight: bold; text-transform: uppercase; }\n        .header-row { margin-bottom: 3px; }\n\n        .item-box {\n            width: 100%;\n            border: 1px solid #000;\n            border-collapse: collapse;\n            margin-bottom: 10px;\n        }\n        .item-box td {\n            border: 1px solid #000;\n            vertical-align: top;\n            padding: 8px;\n        }\n\n        .col-item { width: 60%; }\n        .col-batch { width: 40%; padding: 0 !important; }\n\n        .batch-header {\n            border-bottom: 1px solid #000;\n            padding: 5px 8px;\n            font-weight: bold;\n            background-color: #f0f0f0;\n            font-size: 10pt;\n        }\n        .batch-row {\n            padding: 5px 8px;\n            border-bottom: 1px solid #ddd;\n        }\n        .batch-row:last-child { border-bottom: none; }\n\n        .footer-section { margin-top: 10px; }\n        .footer-line { margin-bottom: 3px; }\n        .bold-label { font-weight: bold; }\n        \n        .bale-title {\n            font-weight: bold;\n            text-decoration: underline;\n            font-size: 12pt;\n            margin-bottom: 5px;\n        }\n    </style>\n\n    {% set total_job_qty = doc.custom_bales_plan|sum(attribute='bale_qty') %}\n\n    {% if doc.custom_bales_plan %}\n        {% for group in doc.custom_bales_plan|groupby('bale_number') %}\n            \n            {% set current_bale_no = group.grouper %}\n            {% set rows = group.list %}\n            {% set first_row = rows[0] %}\n            {% set bale_specific_qty = first_row.bale_qty %}\n            \n            {% set item_desc = frappe.db.get_value(\"Item\", first_row.packed_item, \"description\") %}\n            \n            {% set item_ref_code = first_row.packed_item %} \n            {% set ref_doc = frappe.get_doc(\"Item\", first_row.packed_item) %}\n            {% set item_prop = frappe.get_doc(\"Item\", first_row.packaging_item) %}\n            \n            {% if ref_doc.customer_items %}\n                {% set item_ref_code = ref_doc.customer_items[0].ref_code %}\n            {% endif %}\n\n            {% set dims = {'L': 0, 'W': 0, 'V': 0, 'C': 0} %}\n            \n            {% if item_prop.custom_item_property_detail %}\n                {% for prop in item_prop.custom_item_property_detail %}\n                    {% if prop.item_property == \"Length\" %}\n                        {% set _ = dims.update({'L': prop.value}) %}\n                    {% elif prop.item_property == \"Width\" %}\n                        {% set _ = dims.update({'W': prop.value}) %}\n                    {% elif prop.item_property == \"Colour of Base Fabric\" %}\n                        {% set _ = dims.update({'C': prop.value}) %}\n                    {% elif \"Valve Depth\" in prop.item_property %}\n                        {% set _ = dims.update({'V': prop.value}) %}\n                    {% endif %}\n                {% endfor %}\n            {% endif %}\n            \n            <div class=\"single-label-container\">\n\n                <div class=\"header-section\">\n                    <div class=\"company-name\">{{ doc.company or \"Alliance Polysacks USA Inc.\" }}</div>\n                    <div class=\"header-row\">\n                        <strong>Date:</strong> {{ frappe.utils.formatdate(frappe.utils.nowdate(), \"dd-MM-yyyy\") }}\n                    </div>\n                    <div class=\"header-row\">\n                        <strong>Description:</strong> {{ item_desc or \"N/A\" }}\n                    </div>\n                </div>\n\n                <table class=\"item-box\">\n                    <tr>\n                        <td class=\"col-item\">\n                            <!--<div class=\"bale-title\">BALE # {{ current_bale_no }}</div>-->\n                            <div><strong>Item:</strong> {{ item_ref_code }}</div>\n                            <!--<div style=\"font-size: 10pt; margin-top: 5px; margin-bottom: 10px;\">-->\n                            <!--    {{ item_desc }}-->\n                            <!--</div>-->\n                            <div><strong>No of Bags:</strong> {{ bale_specific_qty }}</div>\n                        </td>\n\n                        <td class=\"col-batch\">\n                            <div class=\"batch-header\">Batch Number(s)</div>\n                            {% for row in rows %}\n                                <div class=\"batch-row\">\n                                    {{ loop.index }}. {{ row.sub_batch }} \n                                </div>\n                            {% endfor %}\n                            <div class=\"batch-row\">{{ rows|length + 1 }}. ________________</div>\n                        </td>\n                    </tr>\n                </table>\n\n                <div class=\"footer-section\">\n                    <div class=\"footer-line\">\n                        <span class=\"bold-label\">BAG SIZE/DIMENSIONS: (L x W x Valve)</span><br>\n                        <span class=\"bold-label\">{{ dims.L }} x {{ dims.W }} x {{ dims.V }} MM</span>\n                    </div>\n                    <div class=\"footer-line\">\n                        <span class=\"bold-label\">BAG COLOR:</span> {{dims.C}}\n                    </div>\n                    <div class=\"footer-line\" style=\"margin-top: 15px;\">\n                        <span class=\"bold-label\">PALLET NO:</span> \n                        <span style=\"border-bottom: 1px solid #000; width: 80px; display: inline-block;\">&nbsp;</span>\n                        <span class=\"bold-label\" style=\"margin: 0 10px;\">OF</span>\n                        <span class=\"bold-label\">Weight:</span> \n                        <span style=\"border-bottom: 1px solid #000; width: 100px; display: inline-block;\">&nbsp;</span>\n                    </div>\n                </div>\n\n            </div>\n            \n            {% endfor %}\n    {% else %}\n        <p>No bale data found.</p>\n    {% endif %}\n\n</div>",
